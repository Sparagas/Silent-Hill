struct Fog
{
    float near;
    float far;
    ubyte r; // note: black fog is impossible, colors close to or equal to 0 will just be "no fog"
    ubyte g;
    ubyte b;
    ubyte a;
    ubyte near_power;
    ubyte far_power;
};

if (GetTemplateName() == "sh4_fog.bt")
    Fog sh4_fog <open=true>;
